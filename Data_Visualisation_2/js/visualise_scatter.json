{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mwon0030/FIT3179/main/Data_Visualisation_2/data/common_player_info.csv",
    "name": "player_data",
    "format": {
      "type": "csv"
    }
  },
  "title": {
    "text": "Distribution of Height and Weight of Active NBA Players",
    "fontSize": 20
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "font": "myFont",
    "legend": {
      "titleFontSize": 14,
      "labelFontSize": 14
    }
  },
  "transform": [
    {
      "filter": "datum['HEIGHT_CM'] >= 15 && datum['WEIGHT_KG'] >= 5"
    }
  ],
  "width": 460,
  "height": 520,
  "encoding": {
    "x": {
      "field": "HEIGHT_CM",
      "type": "quantitative",
      "title": "Height (CM)",
      "axis": {
        "titleFontSize": 14,
        "labelFontSize": 14
      },
      "scale": {
        "domain": [
          175, 
          230
          ]
      }
    },
    "y": {
      "field": "WEIGHT_KG",
      "type": "quantitative",
      "title": "Weight (KG)",
      "axis": {
        "titleFontSize": 14,
        "labelFontSize": 14
      },
      "scale": {
        "domain": [
          70,
          145
        ]
      }
    },
    "tooltip": [
      {
        "field": "HEIGHT_CM",
        "title": "Height"
      },
      {
        "field": "WEIGHT_KG",
        "title": "Weight"
      },
      {
        "aggregate": "count",
        "title": "Number of Players"
      }
    ]
  },
    "layer": [
      {
        "mark": "point"
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "bottom",
          "dx": -50,
          "dy": -20,
          "fontSize": 12,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {
            "value": ["Tallest and", "Heaviest Player"]
          },
        "opacity": {
          "condition": {
            "test": "datum['WEIGHT_KG'] > 140",
            "value": 1
          },
          "value": 0
        }
        }
      }
    ]
}