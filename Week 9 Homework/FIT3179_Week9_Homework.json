{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Aquaculture Export Quantity of Fish in 2015",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray"
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "worldfishexports.csv"
                        },
                        "key": "Land Area",
                        "fields": ["Trade flow", "Commodity", "2015"]
                    }
                },
                {
                    "calculate": "datum.2015 + 0.01", "as": "2015 Exports"
                }
            ],
            "encoding": {
                "color": {
                    "field": "2015",
                    "type": "quantitative"
                }
            }
        }
    ]
}